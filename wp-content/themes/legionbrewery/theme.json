{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "base",
					"color": "#ffffff",
					"name": "Base"					
				},
                {
                    "slug": "primary",
                    "color": "#2e4158",
                    "name": "Primary"
                },
                {
                    "slug": "off-white",
                    "color": "#f4f1e8",
                    "name": "off-white"
                }                        
            ],
            "link": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
                    "slug": "system-fonts",
                    "name": "System Fonts"
                },
                {
                    "fontFamily": "EvelethBold",
                    "slug": "eveleth-bold",
                    "name": "Eveleth Bold",
                    "fontFace": [
                        {
                            "font-family": "EvelethBold",
                            "font-weight": "700",
                            "font-style": "normal",
                            "font-stretch": "normal",
                            "src": [ "file:./assets/fonts/EvelethCleanRegular.otf" ]
                        }
                    ]
                },
                {
                    "fontFamily": "EvelethThin",
                    "slug": "eveleth-thin",
                    "name": "Eveleth Thin",
                    "fontFace": [
                        {
                            "font-family": "EvelethThin",
                            "font-weight": "100",
                            "font-style": "normal",
                            "font-stretch": "normal",
                            "src": [ "file:./assets/fonts/EvelethCleanThin.otf" ]
                        }
                    ]
                },
                {
                    "fontFamily": "EvelethRough",
                    "slug": "eveleth-rough",
                    "name": "Eveleth Rough",
                    "fontFace": [
                        {
                            "font-family": "EvelethRough",
                            "font-weight": "700",
                            "font-style": "normal",
                            "font-stretch": "normal",
                            "src": [ "file:./assets/fonts/EvelethRough.otf" ]
                        }
                    ]
                },
                {
                    "fontFamily": "LocalBrewery",
                    "slug": "local-brewery",
                    "name": "Local Brewery",
                    "fontFace": [
                        {
                            "font-family": "LocalBrewery",
                            "font-weight": "100",
                            "font-style": "normal",
                            "font-stretch": "normal",
                            "src": [ "file:./assets/fonts/LocalBreweryBold.otf" ]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "slug": "extra-small",
                    "size": "1rem",
                    "name": "Extra small"
                },
                {
                    "slug": "small",
                    "size": "1.125rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1.25rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "extra-large",
                    "size": "2.5rem",
                    "name": "Extra large"
                }
            ],
            "fontWeight": true,
            "lineHeight": true
        },
        "spacing": {
            "padding": true,
                "margin": true,
            "units": [ "px", "em", "rem", "vh", "vw", "%" ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "blocks": {
			"core/paragraph": {
				"color": {
					"background": false
				}
			}
		}              
    },
    "styles": {
        "color": {
			"background": "var(--wp--preset--color--off-white)",
			"text": "var(--wp--preset--color--primary)"
		}
    }
}